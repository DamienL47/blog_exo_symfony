<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block title %}
    <title>Blog exo symfony</title>
    {% endblock %}
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('style.css') }}">
</head>
<body>
    <header>
        <h1 class="titre">Blog exo Symfony</h1>
        <nav>
            <ul class="navbar">
                <form action="{{ path('admin_search') }}" method="get" class="formulaire">
                    <label for="search" class="form-label"></label>
                    <input class="form-control" type="text" name="search" id="search" placeholder="Chercher sur le site " >
                    <input class="btn btn-light" type="submit">
                </form>
                <li class="item-menu"><a style="color: black; text-decoration: none;" href={{ path('home') }}> Accueil </a></li>
                <li class="item-menu"><a style="color: black; text-decoration: none;" href={{ path('admin-articles') }}> Nos Articles </a></li>
                <li class="item-menu"><a style="color: black; text-decoration: none;" href={{ path('admin_categories') }}> Nos Cat√©gories </a></li>
            </ul>
        </nav>
    </header>

    {% for message in app.flashes('Bravo') %}
        <p> {{ message }}</p>
    {% endfor %}
    {% for message in app.flashes('ERROR') %}
        <p> {{ message }}</p>
    {% endfor %}


    <main>
        {%block main%}
        {% endblock %}
    </main>

    <footer>
        {% block footer %}
            <p>Blog exo symfony</p>
        {% endblock %}
    </footer>

</body>
</html>